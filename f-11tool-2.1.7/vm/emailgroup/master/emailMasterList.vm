#set( $head_title = "電子メール送信グループ マスター" )
#set( $layout = "Default.vm" )
#if ( $user.hasPermission("email_group_master") )

#errorMarkup()

<h3>$head_title</h3>
送信グループマスターリスト
<a href="$link.setForward('inputEmailgroupMaster')">追加</a>
<table border="0" cellpadding="5">
  <tr>
    <td bgcolor="Skyblue">ID</td>
    <td bgcolor="Skyblue">グループ名</td>
    <td bgcolor="Skyblue">メールアドレス</td>
    <td bgcolor="Skyblue" colspan="2" ></td>
  </tr>
  #foreach ($emailgroupMaster in $emailgroupMasterList)
  <tr>
    <td bgcolor="Khaki" align="right">$!emailgroupMaster.group_id</td>
    <td bgcolor="Khaki">$!F11util.htmlEscape($emailgroupMaster.group_name)</td>
    <td bgcolor="Khaki">$!F11util.htmlEscape($emailgroupMaster.address)</td>
    <td><a href="$link.setForward('editEmailgroupMaster').addQueryData('group_id',"$emailgroupMaster.group_id")">変更</a></td>
    <td><a href="$link.setForward('asksEmailgroupMasterDelete').addQueryData('group_id',"$emailgroupMaster.group_id")">削除</a></td>
  </tr>
  #end
</table>
#end
