#set( $head_title = "電子メール送信先削除" )
#set( $layout = "Default.vm" )
#if ( $user.hasPermission("email") )

#errorMarkup()

<h3>この電子メール送信先を削除してもよろしいですか？</h3>
<form method="POST" action="$link.setAction('/removeEmail')" >
  <input type="hidden" name="group_id" value="$!emailForm.group_id" />
  <input type="hidden" name="address" value="$!emailForm.address" />
  <table border="0" cellpadding="5">
    <tr>
      <td bgcolor="Skyblue">ID</td>
      <td bgcolor="Khaki" align="left">$!emailForm.group_id</td>
    </tr>
    <tr>
      <td bgcolor="Skyblue">メールアドレス</td>
      <td bgcolor="Khaki" align="left">$!emailForm.address</td>
    </tr>
  </table>
  <input type="submit" name="submit" value="削除"/>
</form>
#end
